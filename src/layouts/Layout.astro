---
import {
  Header,
  Project,
  Certificate,
  SideBar,
  Technologies,
  Konsole,
  Footer,
  Christmas,
  Halloween,
} from "../components";
import { currentHoliday, cardColor } from "../data";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/img/logo.webp" />
    <meta name="generator" content={Astro.generator} />
    <title>David[HL]</title>
  </head>
  <body
    class="absolute top-0 z-[-2] h-screen w-full bg-[#000000] bg-[radial-gradient(#ffffff33_1px,#00091d_1px)] bg-[size:20px_20px] font-light"
  >
    {currentHoliday() === "diciembre" && <Christmas />}

    <div class="mb-10">
      <Header />
    </div>

    <div class="mb-10 md:flex md:justify-end">
      <div class=`${cardColor()} rounded-2xl m-2 p-2 md:m-8 md:w-[75vw] sm:p-3`>
        <h2 class="text-white font-bold pb-3 text-[20px] md:text-[23px]">
          Projects <span><i class="fas fa-star"></i></span>
        </h2>
        <Project />
      </div>
    </div>

    <div
      class=`${cardColor()} rounded-2xl m-2 mb-10 p-2 md:m-8 md:w-[75vw] sm:p-3`
    >
      <h2 class="text-white font-bold pb-3 text-[20px] md:text-[23px]">
        Certificates <span><i class="fa-solid fa-certificate"></i> </span>
      </h2>
      <Certificate />
    </div>

    <SideBar />

    <div class="mb-10">
      <h2
        class="text-white text-center font-bold text-[20px] mx-2 md:mx-8 md:text-[28px]"
      >
        My technologies and tools <span><i class="fa-solid fa-wrench"></i></span
        >
      </h2>
      <Technologies />
    </div>

    <div class="sm:flex sm:justify-center">
      <div><Konsole /></div>
    </div>

    <Footer />

    {
      currentHoliday() === "octubre" && (
        <section class="fixed top-0 w-[100vw] h-[100vw] -z-10">
          <Halloween />
        </section>
      )
    }

    <slot />
  </body>
</html>
