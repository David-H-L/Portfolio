---
import ButtonKonsole from "./ui/ButtonKonsole.astro";
import { Bash } from "./ui/Bash";
---

<div
  id="terminal"
  class="group relative mx-2 sm:w-[90vw] md:m-8 md:max-w-2xl animate-fade-in-right"
>
  <span
    class="opacity-0 group-hover:opacity-100 transition-opacity duration-400 ease-in-out absolute -inset-0.5 bg-sky-500 rounded-lg blur"
  ></span>

  <div
    class="relative mt-5 border border-sky-500/20 bg-[#1e1e1e] px-1 rounded-[10px]"
  >
    <header class="h-7 flex items-center">
      <ButtonKonsole />
    </header>
    <main class="h-55 bg-sky-500/20 sm:h-65">
      <Bash client:load />
    </main>
    <footer class="h-1"></footer>
  </div>
</div>
